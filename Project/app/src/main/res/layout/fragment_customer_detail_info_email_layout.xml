<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <ImageView
            style="@style/CustomerConnect.Form.SectionImage"
            android:src="@drawable/ic_material_email_gray"
            android:contentDescription="@string/customers_email"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/customer_info_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/blackPrimaryText"
                tools:text="peterarcentales@gmail.com"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/icons_dark"/>

        <ImageView
            android:id="@+id/action_send_email"
            style="@style/CustomerConnect.Form.SectionImage"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_material_email_gray"
            android:contentDescription="@string/send_email"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            />


    </LinearLayout>

</layout>