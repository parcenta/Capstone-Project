<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Image Holder -->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_customer_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_material_person_gray"
                app:civ_fill_color="@color/common_google_signin_btn_text_dark"
                app:civ_circle_background_color="@color/common_google_signin_btn_text_dark"
                />
        </LinearLayout>

        <!-- Name and Address Holder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/item_customer_name"
                style="@style/CustomerConnect.Text.ListItem.Primary"
                tools:text="Bake restaurant"/>
            <TextView
                android:id="@+id/item_customer_address"
                style="@style/CustomerConnect.Text.ListItem.Secondary"
                tools:text="5th Avenue"/>
        </LinearLayout>

    </LinearLayout>
</layout>