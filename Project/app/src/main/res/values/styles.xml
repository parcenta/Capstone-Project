<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="CustomerConnect.Text.ListItem" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomerConnect.Text.ListItem.Primary">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CustomerConnect.Text.ListItem.Secondary">
        <item name="android:textColor">@color/blackSecondaryText</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CustomerConnect.Text.ListItem.Secondary.Multiline">
        <item name="android:maxLines">3</item>
    </style>

    <style name="CustomerConnect.Form.SectionImage" parent="AppTheme">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="CustomerConnect.Text.HeaderTitle.Light" parent="TextAppearance.AppCompat.Large">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Button -->
    <style name="CustomerConnect.Button.Colored" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue_button_material</item>
        <item name="backgroundTint">@color/blue_button_material</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>




</resources>
